# RubyGems - Source
source "https://rubygems.org"

# Ruby - Version
ruby "2.1.5"

# Middleman Core
gem "middleman-core", "3.3.5"

# Middleman Livereload - Auto-refresh on change
gem "middleman-livereload", "3.3.4"

# Middleman S3 Sync - Allows sync between middleman build and Amazon S3
gem "middleman-s3_sync", "3.0.31"

# Middleman Pagination - Allows pagination for proxy pages
gem "middleman-pagination", "1.1.1"

# Middleman Syntax - Provides Rouge syntax highlighting
gem "middleman-syntax", "2.0.0"

# Middleman React - Allows for JSX compilation
gem "middleman-react", "0.11.1"

# Colorize
gem "colorize", "0.7.4"

# SASS - Syntactically Awesome Stylesheets Yo
gem "sass", "3.4.1"

# Kramdown - Markdown processor
gem "kramdown", "1.4.1"

# Uglifier - JavaScript minifier
gem "uglifier", "2.5.3"

# HTTParty
gem "httparty", "0.13.3"
